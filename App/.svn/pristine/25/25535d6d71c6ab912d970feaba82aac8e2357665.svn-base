<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  	
<mapper namespace="com.junl.apps.mapper.WXYouWuMapper">
	
	
	
	
	
	<update id="updateYouWu"  parameterType="WXYouWuModel">
		UPDATE
			DMS_WX_youWuDispose
		set 
			weatherState=#{weatherState},
			qiWen=#{qiWen},
			startZHK=#{startZHK},
			startZHM=#{startZHM},
			endZHK=#{endZHK},
			endZHM=#{endZHM},
			mianJi=#{mianJi},
			disposeTime=#{disposeTime},
			shiGongJiXie=#{shiGongJiXie},
			shiGongRenYuan=#{shiGongRenYuan},
			anQuanYuan=#{anQuanYuan},
			fuZeRen=#{fuZeRen},
			pingJia=#{pingJia},
			remark=#{remark},
			imgs=#{imgs},
			taskInfoRelate=#{taskInfoRelate},
			luXian=#{luXian},
			wzType=#{wzType},
			wzName=#{wzName},
			wzMiaoShu=#{wzMiaoShu},
			luBingType=#{luBingType},
			foundTime=#{foundTime},
			sunHuaiCauseType=#{sunHuaiCauseType}
		WHERE
			ids = #{ids}
	</update>
	
	
	 <insert id="insertYouWu" parameterType="WXYouWuModel">
        INSERT INTO
        	DMS_WX_youWuDispose
        values(
        	#{ids},
			#{weatherState},
			#{qiWen},
			#{startZHK},
			#{startZHM},
			#{endZHK},
			#{endZHM},
			#{mianJi},
			#{disposeTime},
			#{shiGongJiXie},
			#{shiGongRenYuan},
			#{anQuanYuan},
			#{fuZeRen},
			#{pingJia},
			#{remark},
			#{imgs},
			#{taskInfoRelate},
			#{createUserId},
			0,
			#{luXian},
			#{wzType},
			#{wzName},
			#{wzMiaoShu},
			getdate(),
			#{luBingType},
			#{foundTime},
			0,
			0,
			#{sunHuaiCauseType}
        )
    </insert>
	
	
	
	
	
	
	
	
	
	
	
	
	
	<select id="queryWXYouWuListPage"  resultType="Map"  parameterType="Map" >
			SELECT
				*, CONVERT(varchar(100),disposeTime, 20) distime
			FROM
				DMS_WX_youWuDispose dwy
			where dwy.createUserId=#{createUserId}
			<if test="weatherState != null and weatherState != ''">
				AND dwy.weatherState like '%'+#{weatherState }+'%'
			</if>
			<if test="luXian != null and luXian != ''">
				AND dwy.luXian like '%'+#{luXian }+'%'
			</if>
	</select>
	<!--  循环查询各个维修记录表								计量
	首先根据报验的主键ids到报验外键表获取任务（任务表的外键表）的ids
	根据获取到的任务（任务表的外键表）的ids获取维修表的记录数 -->
	<select id="queryForEach" resultType="Map"  parameterType="Map" >
		select 
			wx.state wxState,taskrelate.ids taskrelateIds, wx.meteringMoney meteringMoney,task.taskNo taskNo,wx.ids ids, wx.startZHK startZHK,wx.startZHM startZHM,wx.endZHK endZHK,wx.endZHM endZHM,wx.luXian luXian,wx.wzType wzType,wx.wzName wzName,wx.meteringNum meteringNum,xc.binghaiOrQueXianType binghaiOrQueXianType 
		from 
			DMS_WX_youWuDispose wx,DMS_RW_task_info_relate taskrelate,DMS_XC_xunChaInfo xc,DMS_RW_task task
		where 
			xc.ids=taskrelate.xunChaInfoId 
			 and wx.taskInfoRelate=taskrelate.ids
			 and taskrelate.taskId=task.ids
			 and isnull(wx.state,0)!=2
			 and wx.taskInfoRelate IN (select taskId from DMS_BY_weiXiuBaoYanF f  where f.byIds=#{byIds})
	</select>	
	
	
	<!--  循环查询各个维修记录表							通过（抽检）
	首先根据报验的主键ids到报验外键表获取任务（任务表的外键表）的ids
	根据获取到的任务（任务表的外键表）的ids获取维修表的记录数 -->
	<select id="queryForEachAccept" resultType="Map"  parameterType="Map" >
		select 
			wx.state wxState,taskrelate.ids taskrelateIds, wx.meteringMoney meteringMoney,task.taskNo taskNo,wx.ids ids, wx.startZHK startZHK,wx.startZHM startZHM,wx.endZHK endZHK,wx.endZHM endZHM,wx.luXian luXian,wx.wzType wzType,wx.wzName wzName,wx.meteringNum meteringNum,xc.binghaiOrQueXianType binghaiOrQueXianType 
		from 
			DMS_WX_fzhlWeiXiu wx,DMS_RW_task_info_relate taskrelate,DMS_XC_xunChaInfo xc,DMS_RW_task task
		where 
			xc.ids=taskrelate.xunChaInfoId 
			 and wx.taskInfoRelate=taskrelate.ids
			 and taskrelate.taskId=task.ids
			 and isnull(wx.state,0)=3
			 and wx.taskInfoRelate IN (select taskId from DMS_BY_weiXiuBaoYanF f  where f.byIds=#{byIds})
	</select>
		<!--  循环查询各个维修记录表							未通过（抽检）
	首先根据报验的主键ids到报验外键表获取任务（任务表的外键表）的ids
	根据获取到的任务（任务表的外键表）的ids获取维修表的记录数 -->
	<select id="queryForEachNoAccept" resultType="Map"  parameterType="Map" >
		select 
			wx.state wxState,taskrelate.ids taskrelateIds, wx.meteringMoney meteringMoney,task.taskNo taskNo,wx.ids ids, wx.startZHK startZHK,wx.startZHM startZHM,wx.endZHK endZHK,wx.endZHM endZHM,wx.luXian luXian,wx.wzType wzType,wx.wzName wzName,wx.meteringNum meteringNum,xc.binghaiOrQueXianType binghaiOrQueXianType 
		from 
			DMS_WX_fzhlWeiXiu wx,DMS_RW_task_info_relate taskrelate,DMS_XC_xunChaInfo xc,DMS_RW_task task
		where 
			xc.ids=taskrelate.xunChaInfoId 
			 and wx.taskInfoRelate=taskrelate.ids
			 and taskrelate.taskId=task.ids
			 and isnull(wx.state,0)=2
			 and wx.taskInfoRelate IN (select taskId from DMS_BY_weiXiuBaoYanF f  where f.byIds=#{byIds})
	</select>
</mapper>