<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  	
<mapper namespace="com.junl.apps.mapper.UserMapper">
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	

	
	
	
	
	
	
	<sql id="selectcolumn">
		<![CDATA[
			ids,
			salt,
			status,
			username,
			password,
			CAST(groupids as varchar(8000)) groupids  ,
			CAST(groupnames as varchar(8000)) groupnames   
		]]>
	</sql>
	
	<!-- 单个UserModel对象查询  -->
	<select id="queryObject" resultType="UserModel" parameterType="Map">
		SELECT
			<include refid="selectcolumn"></include>
		FROM
			pt_user u
		<trim prefix="WHERE" prefixOverrides="AND">
			<if test="ids != null and ids != ''">
				AND u.ids = #{ids }
			</if>
			<if test="username != null and username != ''">
				AND u.username = #{username}
			</if>
		</trim>
	</select>
	
	
	<select id="queryListPage" parameterType="Map" resultType="UserModel">
		SELECT
			<include refid="selectcolumn"></include>
		FROM
			pt_user u
		<trim prefix="WHERE" prefixOverrides="AND">
			<if test="ids != null and ids != ''">
				AND u.ids = #{ids }
			</if>
			<if test="username != null and username != ''">
				AND u.username = #{username}
			</if>
		</trim>
	</select>
</mapper>